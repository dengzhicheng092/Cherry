<resources>

    <style name="OrangeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#f57c00</item>
        <item name="colorAccent">#ffad42</item>
        <item name="android:itemBackground">@color/colorWhite</item>
        <item name="tabIndicatorColor">@color/colorWhite</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="tabTextColor">@color/colorWhite</item>
        <item name="titleTextColor">@color/colorWhite</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="elevation">0dp</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <!--our custom text -->
        <item name="miniPlayerTextColor">@color/colorWhite</item>
        <item name="bg">@drawable/gradient_orange_bg</item>
        <item name="rowItemTextColor">@color/colorWhite</item>
        <item name="android:startColor">#ac1900</item>
        <item name="android:centerColor">#ff833a</item>
        <item name="android:endColor">#e65100</item>
    </style>

    <style name="PurpeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#282828</item>
        <item name="colorAccent">#030303</item>
        <item name="android:itemBackground">@color/colorWhite</item>
        <item name="tabIndicatorColor">@color/colorWhite</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="tabTextColor">@color/colorWhite</item>
        <item name="titleTextColor">@color/colorWhite</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="elevation">0dp</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <!--our custom text -->
        <item name="miniPlayerTextColor">@color/colorWhite</item>
        <item name="bg">@drawable/gradient_bg</item>
        <item name="rowItemTextColor">@color/colorWhite</item>
        <item name="android:startColor">#4a0072</item>
        <item name="android:centerColor">#7b1fa2</item>
        <item name="android:endColor">#7b1fa2</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="collapsingToolbarLayoutTitleColor" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="expandToolbarLayoutTitleColor" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PurpeTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PurpeTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
